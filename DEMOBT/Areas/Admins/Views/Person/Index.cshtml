        <th>
            <label>Person Name</label>
        </th>
        <th>
            <label>Person Adress</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PersonName)
        </td>
        <td>
